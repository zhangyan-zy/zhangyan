<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wingscode.modules.common.dao.GoodsDao">


    <select id="selectAll" resultType="com.wingscode.modules.common.entity.GoodsEntity">
       select g.*,b.name typeName from tb_goods g left join tb_type b on g.type_id=b.id
       where 1=1
       <if test="name !=null and name !='' ">
          and g.name like concat('%',#{name},'%')
       </if>
        <if test="typeId !=null and typeId !='' ">
            and b.id =#{typeId}
        </if>
    </select>

</mapper>