<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wingscode.modules.common.dao.BillInInfoDao">

   <select id="selectAll" resultType="com.wingscode.modules.common.entity.BillInInfoEntity">
       select count(*) leadsNum,sum(amount) leadsCount from tb_bill_in_info where bill_id=#{billId}
         </select>

     <select id="selectByBillId" resultType="com.wingscode.modules.common.entity.BillInInfoEntity">
         select * from tb_bill_in_info where  bill_id=#{billId}
     </select>
    <select id="selectByLeadsId" resultType="com.wingscode.modules.common.entity.BillInInfoEntity">
        select * from tb_bill_in_info where leads_id=#{leadsId}
    </select>

    <delete id="deleteByBillId">
        delete from tb_bill_in_info where bill_id=#{billId}
    </delete>
</mapper>